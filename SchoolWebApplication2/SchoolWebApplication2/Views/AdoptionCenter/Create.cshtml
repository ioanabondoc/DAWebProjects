@model SchoolWebApplication2.Models.Animal

@{
    ViewData["Title"] = "Create";
}

<h3>Adding a new animal:</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option value="Cat">Cat</option>
                    <option value="Dog">Dog</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <div class="justify-content-around d-inline">
                    <span style="margin:auto 5px"><input class="radio-inline" type="radio" asp-for="Gender" value="Male" >Male</span>
                    <span><input class="radio-inline" type="radio" asp-for="Gender" value="Female" checked >Female</span>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Breed" class="control-label"></label>
                <input asp-for="Breed" class="form-control" value="Unknown" />
                <span asp-validation-for="Breed" class="text-danger"></span>
            </div>
            <div id="dp" class="form-group">
                <label asp-for="DateArrived" class="control-label"></label>
                <input asp-for="DateArrived" class="form-control" />
                <span asp-validation-for="DateArrived" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <select asp-for="Age" class="form-control">
                    <option value="Unknown">Unknown</option>
                    <option value="Baby">Baby(0-5 months)</option>
                    <option value="Young">Young(5 months-1 year)</option>
                    <option value="Adult">Adult(1 year+)</option>
                </select>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoLink" class="control-label"></label>
                <input asp-for="PhotoLink" class="form-control" />
                <span asp-validation-for="PhotoLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
